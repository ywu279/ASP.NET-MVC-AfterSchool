@model AfterSchool.Models.DataAccess.CourseOffer

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Course Offer</h1>

<h4>@Model.Course.Name - @Model.Location.Name - @Model.StartDate.ToString("yyyy-MM-dd") <span>(Start Date)</span></h4>
<img src="@("~/Images/CourseOffers/" + Model.ImageName)" asp-append-version="true" width="400px"/>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CourseId" />
            <input type="hidden" asp-for="LocationId" />
            <input type="hidden" asp-for="StartDate" />
            <input type="hidden" asp-for="ImageName"/>
            @*<div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" class="form-control" readonly/>                
            </div>*@
            <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label><span style="color: red;">*</span>
                <input asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label><span style="color: red;">*</span>
                <div class="input-group">
                    <span class="input-group-text">$</span>
                    <input asp-for="Price" class="form-control" />
                </div>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="ImageFile" class="control-label">Change Image</label>
                <input asp-for="ImageFile" accept="image/*" class="form-control"/>
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <input type="submit" value="Save" class="btn btn-primary"/>
                <a asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
