@model IEnumerable<AfterSchool.Models.DataAccess.CourseOffer>

@{
    ViewData["Title"] = "Index";
}

<h1>Manage Course Offers</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Course)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.ImageName)
            </th>*@
            <th>Instructor(s)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.Course.Name
            </td>
            <td>
                @item.Location.Name
            </td>
            <td>
                @item.StartDate.ToString("yyyy-MM-dd")
            </td>
            <td>
                @item.EndDate.ToString("yyyy-MM-dd")
            </td>
            <td>
                @item.Price
            </td>
            @*<td>
                @item.ImageName
            </td>*@
            <td>
                @{
                    List<String> nameList = new List<String>();
                    item.Instructors.ForEach(x => nameList.Add(x.FullName));
                    var nameStr = string.Join(", ", nameList);
                }
                @nameStr
            </td>
            <td>
                <a asp-action="Edit" asp-route-cid="@item.Course.Id" asp-route-lid="@item.Location.Id" asp-route-sid="@item.StartDate.ToString("yyyy-MM-dd")" class="btn btn-outline-primary">Edit</a> |
                <a asp-action="Details" asp-route-cid="@item.Course.Id" asp-route-lid="@item.Location.Id" asp-route-sid="@item.StartDate.ToString("yyyy-MM-dd")" class="btn btn-outline-info">Details</a> |
                <a asp-action="Delete" asp-route-cid="@item.Course.Id" asp-route-lid="@item.Location.Id" asp-route-sid="@item.StartDate.ToString("yyyy-MM-dd")" class="btn btn-outline-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
