
@{
    ViewData["Title"] = "Contact Us";
}
<h1>@ViewData["Title"]</h1>
<p>Fill out the form below and we will get in touch with you within 1 - 3 business days.</p>
<div class="row">
    <div class="col-md-4">
        <form action="https://formsubmit.co/d8f04ab168cbbe2dabd335eedfcaa830" method="POST">
            <input type="text" id="fullName" name="fullName" placeholder="Full Name*" class="form-control" required><br>
            <input type="email" id="email" name="email" placeholder="Email*" class="form-control" required><br>
            <input type="text" id="telephone" name="telephone" placeholder="Telephone" class="form-control"><br>
            <textarea id="message" name="message" placeholder="Message" rows="7" class="form-control"></textarea><br>
            <input type="hidden" name="_subject" value="Customer Inquiry">
            <!-- <input type="hidden" name="_next" value="thankyou.html"> -->
            <button type="submit" class="btn btn-primary">Send message</button>
        </form>
    </div>
</div>

